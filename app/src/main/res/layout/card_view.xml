<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorFocusedHighlight"
        android:padding="16dp">

        <TextView
            android:id="@+id/id_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/id_image"
            android:text="Nombre"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_especie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombre"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="9dp"
            android:text="Especie"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_descripcion"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombre"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="-25dp"
            android:layout_toRightOf="@id/id_nombre"
            android:textStyle="bold"
            android:text="Descripcion"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>