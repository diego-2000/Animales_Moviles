<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/id_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/cardview_dark_background"
            />

        <TextView
            android:id="@+id/id_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/id_image"
            android:text="Nombre"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_especie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombre"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="9dp"

            android:layout_toRightOf="@id/id_image"

            android:text="Especie"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_especie"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/id_image"

            android:text="Edad"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombre"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="-25dp"
            android:layout_toRightOf="@id/id_nombre"

            android:text="Descripcion"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>